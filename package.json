{
  "name": "polar-commerce",
  "version": "0.9.0",
  "type": "module",
  "description": "Experimental e-commerce platform combining Next.js 16, Convex for real-time data, Better Auth for authentication, and Polar for payments. Includes custom product bundling to work around Polar's lack of multi-product checkout support.",
  "author": "Ray <hi@rmncldyo.com> (https://github.com/RMNCLDYO)",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/RMNCLDYO/polar-commerce"
  },
  "bugs": {
    "url": "https://github.com/RMNCLDYO/polar-commerce/issues"
  },
  "homepage": "https://github.com/RMNCLDYO/polar-commerce#readme",
  "scripts": {
    "dev": "./scripts/time-script.sh dev npm-run-all --parallel dev:frontend dev:backend",
    "dev:backend": "convex dev --typecheck-components --live-component-sources",
    "dev:frontend": "next dev --experimental-https",
    "generate": "./scripts/time-script.sh generate convex dev --once --typecheck-components",
    "build": "./scripts/time-script.sh build next build",
    "start": "./scripts/time-script.sh start next start",
    "lint": "./scripts/time-script.sh lint sh -c 'eslint . && tsc -p convex'",
    "format": "./scripts/time-script.sh format eslint . --fix",
    "clean": "./scripts/time-script.sh clean sh -c 'rm -rf .next'",
    "reset": "./scripts/time-script.sh reset sh -c 'rm -rf .next && rm -rf node_modules && rm -rf package-lock.json && rm -rf dist && npm install'",
    "db:reset": "./scripts/time-script.sh db:reset npx convex run utils/clearDatabase:clearDatabase",
    "polar:seed": "./scripts/time-script.sh polar:seed npx tsx scripts/seedAll.ts",
    "polar:seed-products": "./scripts/time-script.sh polar:seed-products npx tsx scripts/seedProducts.ts",
    "polar:seed-subscriptions": "./scripts/time-script.sh polar:seed-subscriptions npx tsx scripts/seedSubscriptions.ts"
  },
  "dependencies": {
    "@convex-dev/better-auth": "^0.9.6",
    "@convex-dev/polar": "^0.6.4",
    "@convex-dev/resend": "^0.1.13",
    "@polar-sh/sdk": "^0.38.1",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@react-email/components": "0.5.7",
    "babel-plugin-react-compiler": "1.0.0",
    "better-auth": "1.3.27",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.28.0",
    "convex-helpers": "^0.1.104",
    "lucide-react": "^0.547.0",
    "next": "16.0.0",
    "next-themes": "^0.4.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-qr-code": "^2.0.18",
    "server-only": "^0.0.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.0.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5"
  }
}
